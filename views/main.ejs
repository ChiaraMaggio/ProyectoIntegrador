<%- include("./partials/head") %>

<body>
	<%- include("./partials/header") %>
	
	<!-- Banner -->
	<div>
		<img class="banner-img" src="/images/banner-funkos2.jpg" alt= "Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
			<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
				<% for (let i = 0; i < 8; i++) {%>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/<%=productos[i].id%>">
								<div class="product-box_image">
									<img src="<%=productos[i].foto%>" alt="">
								</div>
								<article class="product-box_data">
									<h2><%=productos[i].nombre %></h2>
									<p><%=productos[i].descripcion%> </p>
									<p><%=productos[i].franquicia%> </p> 
									<p><%=productos[i].comentarios%> </p>
								</article>
							</a>
						</section>
					</div> 
				<% } %>;
		</div>
	</div>

	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más Comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
				<% for (let i = 8; i < 16; i++) {%>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/<%=productos[i].id%>">
								<div class="product-box_image">
									<img src="<%=productos[i].foto%>" alt="">
								</div>
								<article class="product-box_data">
									<h2><%=productos[i].nombre %></h2>
									<p><%=productos[i].descripcion%> </p>
									<p><%=productos[i].franquicia%> </p> 
									<p><%=productos[i].comentarios%> </p>
								</article>
							</a>
						</section>
					</div>
				<% } %>;
		</div>
	</div>
			
	<%- include("./partials/footer") %>
</body>	
</html>

</body>	
</html>
