<%- include("./partials/head") %>

<body>
	<% if(user != null) { %>  
		<%- include("./partials/headerLogueado") %>
	<% } else { %>
		<%- include("./partials/header") %>  
	<% } %> 
	
	<!-- Banner -->
	<div>
		<img class="banner-img" src="/images/banner-funkos2.jpg" alt= "Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
			<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i=0; i < 8 ; i ++) { %> 	
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%= data[i].id %> ">
								<img class="product-box_image" src="/images/products/<%= data[i].product_image %>" alt="Imagen de <%= data[i].product_name %> " >
						    <article class="product-box_data">
								<h2> <%= data[i].product_name %> </h2>
								<p> Descripcion:<%= data[i].product_description %></p>
								<a href="/users/profile/<%=data[i].users.id %>"><p> Usuario: <%= data[i].users.user_name %> <%= data[i].users.user_lastname %> </p></a>
								<p> Comentarios: <%= data[i].comments.length %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>

	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más Comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i=8; i < data.length ; i ++) { %> 	
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%= data[i].id %> ">
							<!-- <figure class="product-box_image"> -->
								<img class="product-box_image" src="/images/products/<%= data[i].product_image %>" alt="Imagen de <%= data[i].product_name %> " >	  
							<!-- </figure> -->
						    <article class="product-box_data">
								<h2> <%= data[i].product_name %> </h2>
								<p> Descripcion:<%= data[i].product_description %></p>
								<a href="/users/profile/<%=data[i].users.id %>"><p> Usuario: <%= data[i].users.user_name %> <%= data[i].users.user_lastname %> </p></a>
								<p> Comentarios: <%= data[i].comments.length %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>

	<%- include("./partials/footer") %>
</body>	
</html>

</body>	
</html>
