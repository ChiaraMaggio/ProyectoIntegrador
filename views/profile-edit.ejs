<%- include("./partials/head") %>

<body>
	<%- include("./partials/headerLogueado") %>
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> 
				<form action="/" method="post" enctype="multipart/form-data">
					<label for="email" class="form-label">Email:</label>
					<input type="email" name="email" value="" class="form-input">
					
					<label for="usuario" class="form-label">Nombre de usuario:</label>
					<input type="text" name="usuario" value="" class="form-input">
					
					<label for="contraseña" class="form-label">Contraseña:</label>
					<input type="password" name="contraseña" value="" class="form-input"> 
					
					<label for="nacimiento" class="form-label">Fecha de nacimiento:</label>
					<input type="date" name="nacimiento" value="" class="form-input">
				
					<label for="documento" class="form-label">Número de documento:</label>
					<input type="number" name="documento" value="" class="form-input">
				
					<label for="foto" class="form-label">Foto de perfil:</label>
					<input type="file" name="foto" value="" class="form-input">

					<label for="enviar" class="form-label">Hacé clic debajo para guardar los cambios:</label>
					<input type="submit" name="enviar" class="form-input">
				</form>
			</h2>

	<%- include("./partials/footer") %>
</body>

</html>