<%- include("./partials/head") %>

<body>
	<% if(user != null) { %>  
		<%- include("./partials/headerLogueado") %>
	<% } else { %>
		<%- include("./partials/header") %>  
	<% } %> 
	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"> Resultados de b√∫squeda </h2>
			</div>
			<% if (locals.errors) { %>
			<p class="product-detail-description"> <%= errors.message %> </p>
			<% } else { %>
			<!-- Show the "ultimos" products -->
				<% for (let i = 0; i < productos.length; i++) {%>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="./product.ejs <%= productos[i].id %>">
								<div class="product-box_image">
									<img src="/images/products/<%=productos[i].product_image%>" alt="">
								</div>
								<article class="product-box_data">
									<h2><%=productos[i].product_name %></h2>
									<p><%=productos[i].product_description%> </p>
									<a href="/users/profile/<%=productos[i].users.id %>">
									<p> Usuario: <%= productos[i].users.user_name %> 
												<%= productos[i].users.user_lastname %> </p>
									</a>
									<p><%=productos[i].franchise%></p> 
								</article>
							</a>
						</section>
					</div>
				<% } %>;
			<% } %>
		</div>
	</div>		
			
	<%- include("./partials/footer") %>
</body>

</html>