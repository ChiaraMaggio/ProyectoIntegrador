<%- include("./partials/head") %>

<body>
	<% if(user != null) { %>  
		<%- include("./partials/headerLogueado") %>
	<% } else { %>
		<%- include("./partials/header") %>  
	<% } %> 
	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"> Resultados de b√∫squeda </h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% if (locals.errors) { %>
						<h3><%= errors.message %> </h3>
			<% }else { %> 
				<% for (let i=0 ; i < data.length ; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%=data[i].id%>">
							<figure class="product-box_image">
								<img src="/images/products/<%=data[i].product_image%>" alt="Imagen de <%=data[i].product_name %>">	  
							</figure>
						<article class="product-box_data">
						  <h3> <%=data[i].name %> </h3>
							<div class="product-text">
								<p> Descripcion:<%= data[i].product_description %></p>
								<a href="/users/profile/<%=data[i].users.id %>"><p> Usuario: <%= data[i].users.user_name %> <%= data[i].users.user_lastname%> </p></a>
								<p> Comentarios: <%= data[i].comments.length %> </p>
							</div>
						</article>
						</a>
					</section>
				</div> 
				<% } %>
		<% } %>
		</div>
	</div>		
			
	<%- include("./partials/footer") %>
</body>

</html>